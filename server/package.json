{
  "name": "WebRTC_Learning",
  "version": "1.0.0",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && npx prisma generate && npx tsc",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/css/styles.css --minify",
    "build:css:watch": "npx tailwindcss -i ./src/input.css -o ./public/css/styles.css --watch",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "predev": "npm run build",
    "dev": "concurrently \"npm run build:css:watch\" \"npm run copy:views:watch\" \"npx tsc -w\" \"nodemon dist/server.js\"",
    "copy:views": "copyfiles -u 2 src/views/**/* dist/views",
    "copy:views:watch": "nodemon --watch src/views --ext ejs --exec \"npm run copy:views\"",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.0",
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.6",
    "prisma": "^6.12.0",
    "tailwindcss": "3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "body-parser": "^2.2.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "rimraf": "^6.0.1",
    "socket.io": "^4.8.1"
  }
}
