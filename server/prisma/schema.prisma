}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int    @id @default(autoincrement())
  name String
}

model Books {
  id     Int    @id @default(autoincrement())
  title  String
  number Int
}
